#!/usr/bin/env bash

DRAFTS=$HOME/Projects/dougalstanton.net/drafts

if [ $# -gt 0 ]
then
    TITLE=$@
    SLUG=`tr '[:upper:] ' '[:lower:]-' <<< ${TITLE}`
    FILENAME=$DRAFTS/$SLUG.markdown
    if [ ! -e $FILENAME ]
    then
        echo -e "---\ntitle: ${TITLE}\ntags:\n---\n" > $FILENAME
    fi
fi
vim + $FILENAME
